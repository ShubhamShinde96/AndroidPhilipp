<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shubham.composecourse">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComposeCourse">
        <activity
            android:name=".TestStylingActivity"
            android:exported="true"
            android:label="@string/title_activity_uistate"
            android:theme="@style/Theme.ComposeCourse"/>

        <activity
            android:name=".ImageCardComposeActivity"
            android:exported="false"
            android:label="@string/title_activity_test_styling"
            android:theme="@style/Theme.ComposeCourse" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/title_activity_image_card_compose"
            android:theme="@style/Theme.ComposeCourse" />
        <activity
            android:name=".ModifiersActivity"
            android:exported="false"
            android:label="@string/title_activity_modifiers"
            android:theme="@style/Theme.ComposeCourse" />
        <activity
            android:name=".UIStateActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ComposeCourse">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>